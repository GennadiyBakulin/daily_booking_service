<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

  <changeSet id="20250216_apartment" author="gennadiy bakulin">
    <createTable tableName="apartment" remarks="Таблица Помещение">
      <column name="id" type="serial" remarks="Уникальный идентификатор">
        <constraints primaryKey="true" primaryKeyName="apartment_id_pk"/>
      </column>
      <column name="city" type="varchar(20)" remarks="Название города">
        <constraints nullable="false"/>
      </column>
      <column name="street" type="varchar(50)" remarks="Название улицы">
        <constraints nullable="false"/>
      </column>
      <column name="house" type="varchar(15)" remarks="Номер дома (может быть корпус)">
        <constraints nullable="false"/>
      </column>
      <column name="count_rooms" type="varchar(25)" remarks="Количество комнат">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <sql>
      ALTER TABLE apartment
        ADD CONSTRAINT apartment_city_is_not_whitespace_and_empty check (length(trim(city)) > 0);
      ALTER TABLE apartment
        ADD CONSTRAINT apartment_street_is_not_whitespace_and_empty check (length(trim(street)) > 0);
      ALTER TABLE apartment
        ADD CONSTRAINT apartment_house_is_not_whitespace_and_empty check (length(trim(house)) > 0);
    </sql>
  </changeSet>

  <changeSet id="20250216_advert" author="gennadiy bakulin">
    <createTable tableName="advert" remarks="Таблица Объявление">
      <column name="id" type="serial" remarks="Уникальный идентификатор">
        <constraints primaryKey="true" primaryKeyName="advert_id_pk"/>
      </column>
      <column name="price" type="numeric(12,2)" remarks="Цена за ночь">
        <constraints nullable="false"/>
      </column>
      <column name="is_active" type="boolean" defaultValueBoolean="true"
        remarks="Статус (активное или архивное)">
        <constraints nullable="false"/>
      </column>
      <column name="apartment_id" type="int" remarks="Ссылка на таблицу apartment">
        <constraints referencedTableName="apartment" referencedColumnNames="id"
          foreignKeyName="apartment_id_fk"/>
      </column>
      <column name="description" type="text" remarks="Описание">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <sql>
      ALTER TABLE advert
        ADD CONSTRAINT advert_positive_price check (cast(price as numeric) > 0);
    </sql>
  </changeSet>

  <changeSet id="20250216_client" author="gennadiy bakulin">
    <createTable tableName="client" remarks="Таблица Клиент">
      <column name="id" type="serial" remarks="Уникальный идентификатор">
        <constraints primaryKey="true" primaryKeyName="client_id_pk"/>
      </column>
      <column name="name" type="varchar(50)" remarks="Имя клиента">
        <constraints nullable="false"/>
      </column>
      <column name="email" type="varchar(50)" remarks="email клиента (УНИКАЛЬНЫЙ)">
        <constraints nullable="false" unique="true"/>
      </column>
    </createTable>
    <sql>
      ALTER TABLE client
        ADD CONSTRAINT client_name_is_not_whitespace_and_empty check (length(trim(name)) > 0);
      ALTER TABLE client
        ADD CONSTRAINT client_email_is_not_whitespace_and_empty check (length(trim(email)) > 0);
    </sql>
  </changeSet>

  <changeSet id="20250216_booking" author="gennadiy bakulin">
    <createTable tableName="booking" remarks="Таблица Бронирование">
      <column name="id" type="serial" remarks="Уникальный идентификатор">
        <constraints primaryKey="true" primaryKeyName="booking_id_pk"/>
      </column>
      <column name="start_date" type="timestamp" remarks="Дата начала бронирования">
        <constraints nullable="false"/>
      </column>
      <column name="end_date" type="timestamp" remarks="Дата окончания бронирования">
        <constraints nullable="false"/>
      </column>
      <column name="client_id" type="int" remarks="Ссылка на таблицу client">
        <constraints referencedTableName="client" referencedColumnNames="id"
          foreignKeyName="client_id_fk"/>
      </column>
      <column name="advert_id" type="int" remarks="Ссылка на таблицу advert">
        <constraints referencedTableName="advert" referencedColumnNames="id"
          foreignKeyName="advert_id_fk"/>
      </column>
      <column name="amount" type="numeric(12,2)" remarks="Стоимость бронирования">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <sql>
      ALTER TABLE booking
        ADD CONSTRAINT booking_positive_or_zero_amount check (cast(amount as numeric) >= 0);
    </sql>
  </changeSet>
</databaseChangeLog>